<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/blur">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/detail_iv_back"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_back"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/detail_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="有何不可"
                android:maxLines="1"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_marginTop="8dp"/>
            <TextView
                android:id="@+id/detail_tv_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="许嵩"
                android:textColor="#CCCCCC"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <com.n0texpecterr0r.topviewplayer.widget.AlbumView
            android:id="@+id/detail_av_album"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="50dp"
            android:src="@drawable/ic_empty"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/detail_tv_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:textColor="#F0F0F0"
            android:textSize="13sp"
            android:text="00:00"/>
        <SeekBar
            android:id="@+id/detail_sb_timebar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/detail_tv_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="24dp"
            android:textColor="#F0F0F0"
            android:textSize="13sp"
            android:text="00:00"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="26dp">
        <ImageView
            android:id="@+id/detail_iv_mode"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_default"
            android:layout_toLeftOf="@id/detail_iv_prev"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"/>
        <ImageView
            android:id="@+id/detail_iv_prev"
            android:layout_width="32dp"
            android:layout_height="36dp"
            android:layout_toLeftOf="@id/detail_iv_action"
            android:layout_centerVertical="true"
            android:layout_marginRight="24dp"
            android:src="@drawable/ic_prev_white"/>
        <ImageView
            android:id="@+id/detail_iv_action"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_play_white"/>
        <ImageView
            android:id="@+id/detail_iv_next"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_toRightOf="@id/detail_iv_action"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24dp"
            android:src="@drawable/ic_next_white"/>
        <ImageView
            android:id="@+id/detail_iv_list"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_toRightOf="@id/detail_iv_next"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:src="@drawable/ic_list"/>
    </RelativeLayout>

</LinearLayout> 