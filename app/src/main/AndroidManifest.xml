<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.n0texpecterr0r.topviewplayer">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name=".ContextApplication"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".main.view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".search.view.SearchActivity">
        </activity>
        <activity android:name=".online.view.OnlineActivity">
        </activity>
        <service android:process=":remote"
            android:name=".player.PlayerService">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT"/>
                <action android:name="com.n0texpecterr0r.topviewplayer.PlayerService"/>
            </intent-filter>
        </service>
    </application>

</manifest>